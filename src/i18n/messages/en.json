{
	"$schema": "https://inlang.com/schema/inlang-message-format",
	"00_zeroth_project": {
		"description": "A project directory / blog platform",
		"title": "Zeroth Sprint"
	},
	"back_to_project_button": {
		"button_label": "Back to project"
	},
	"font_size_buttons": {
		"button_label": "Font size",
		"decrease_label": "Decrease font size",
		"increase_label": "Increase font size"
	},
	"language_selector": {
		"button_label": "Switch language",
		"dropdown_button_label": [
			{
				"declarations": ["input language"],
				"match": {
					"language=*": "Switch to {language}",
					"language=en": "Switch to English",
					"language=pt": "Switch to Brazilian Portuguese"
				},
				"selectors": ["language"]
			}
		]
	},
	"page_not_found": {
		"go_home_button": "Go Home",
		"message": "Sorry, the page you are looking for does not exist or has been moved.",
		"title": "Page Not Found"
	},
	"scroll_to_top_button": {
		"button_label": "Scroll to top"
	},
	"share_buttons": {
		"button_label": "Share this page",
		"copy_button": {
			"button_label": "Copy link",
			"toast_error_message": "Failed to copy link to clipboard!",
			"toast_message": "Link copied to clipboard!"
		},
		"whatsapp_button": {
			"button_label": "Share on WhatsApp",
			"message": "Check this out: {url}"
		},
		"x_button": {
			"button_label": "Share on X"
		}
	}
}
